import java.util.*

class Player{

String playerName;
int wins;
int draws;
int losses;

public Player(String playerName, int wins, int draws, int losses){
  this.playerName = playerName;
  this.wins = wins;
  this.draws = draws;
  this.losses = losses;
}

public void addWin(){
  wins++;
}
public void addDraw(){
  draws++;
}
public void addLoss(){
  losses++;
}
public double winRate(){
  double total = wins + draws + losses;
  if(total!=0){
    double winrate = (double) wins/total;
    return winrate;
  } else{
    return 0.0;
  }
}

}
